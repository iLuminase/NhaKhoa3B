        .fc-timegrid-axis {
            padding: 0 4px;
        }
        .fc-timegrid-slot {
            border-bottom: 1px solid #ddd;
        }
        .fc-timegrid-slot-label {
            font-size: 0.85em;
            color: #666;
        }
        .fc-timegrid-slot-minor {

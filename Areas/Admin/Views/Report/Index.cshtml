@{
    ViewData["Title"] = "Báo cáo";
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <partial name="_AdminSidebar" />

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom animate-fade-in-up">
                <h1 class="h2 gradient-text">
                    <i class="fas fa-chart-bar me-3"></i>Báo Cáo & Thống Kê
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-calendar-alt me-2"></i>Chọn thời gian
                        </button>
                        <button type="button" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-file-excel me-2"></i>Xuất Excel
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Stats Overview -->
            <div class="row mb-4 stagger-animation">
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-primary shadow h-100 py-2 hover-lift">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Doanh thu tháng này
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">125,500,000 VNĐ</div>
                                    <div class="text-muted small mt-1">
                                        <i class="fas fa-arrow-up text-success me-1"></i>
                                        <span class="text-success">15%</span> so với tháng trước
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="statistics-icon">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-success shadow h-100 py-2 hover-lift">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Lượt khám tháng này
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">342</div>
                                    <div class="text-muted small mt-1">
                                        <i class="fas fa-arrow-up text-success me-1"></i>
                                        <span class="text-success">8%</span> tăng trưởng
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="statistics-icon bg-success">
                                        <i class="fas fa-user-injured"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-info shadow h-100 py-2 hover-lift">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Dịch vụ phổ biến
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Tẩy trắng răng</div>
                                    <div class="text-muted small mt-1">
                                        <i class="fas fa-star text-warning me-1"></i>
                                        <span class="text-info">45%</span> tổng doanh thu
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="statistics-icon bg-info">
                                        <i class="fas fa-tooth"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-warning shadow h-100 py-2 hover-lift">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Đánh giá trung bình
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">4.8/5.0</div>
                                    <div class="text-muted small mt-1">
                                        <i class="fas fa-heart text-danger me-1"></i>
                                        <span class="text-warning">98%</span> hài lòng
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="statistics-icon bg-warning">
                                        <i class="fas fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Report Cards -->
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card report-card shadow-sm h-100">
                        <div class="card-header d-flex align-items-center">
                            <div class="service-icon bg-primary text-white rounded-circle me-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">Báo cáo doanh thu</h5>
                                <small class="text-muted">Thống kê tài chính</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Xem chi tiết thống kê doanh thu theo thời gian, phân tích xu hướng và hiệu suất kinh doanh.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="RevenueReport" class="btn btn-primary">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Xem báo cáo
                                </a>
                                <span class="badge bg-success">Mới cập nhật</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card report-card shadow-sm h-100">
                        <div class="card-header d-flex align-items-center">
                            <div class="service-icon bg-info text-white rounded-circle me-3">
                                <i class="fas fa-procedures"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">Báo cáo dịch vụ</h5>
                                <small class="text-muted">Phân tích dịch vụ</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Thống kê các dịch vụ được sử dụng nhiều nhất, đánh giá hiệu quả và mức độ phổ biến.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="ServiceReport" class="btn btn-primary">
                                    <i class="fas fa-pie-chart me-2"></i>
                                    Xem báo cáo
                                </a>
                                <span class="badge bg-info">Phổ biến</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card report-card shadow-sm h-100">
                        <div class="card-header d-flex align-items-center">
                            <div class="service-icon bg-warning text-white rounded-circle me-3">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">Báo cáo bệnh nhân</h5>
                                <small class="text-muted">Quản lý khách hàng</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Phân tích thông tin bệnh nhân, lịch sử khám và xu hướng sử dụng dịch vụ.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="PatientReport" class="btn btn-primary">
                                    <i class="fas fa-user me-2"></i>
                                    Xem báo cáo
                                </a>
                                <span class="badge bg-warning">Quan trọng</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card report-card shadow-sm h-100">
                        <div class="card-header d-flex align-items-center">
                            <div class="service-icon bg-secondary text-white rounded-circle me-3">
                                <i class="fas fa-user-md"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">Báo cáo nhân viên</h5>
                                <small class="text-muted">Hiệu suất làm việc</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Theo dõi hoạt động và hiệu suất làm việc của đội ngũ nhân viên trong phòng khám.
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="StaffReport" class="btn btn-primary">
                                    <i class="fas fa-chart-pie me-2"></i>
                                    Xem báo cáo
                                </a>
                                <span class="badge bg-secondary">Nội bộ</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Content Section -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card shadow mb-4 hover-lift">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-chart-line me-2"></i>Xu Hướng Báo Cáo
                            </h6>
                            <div class="dropdown">
                                <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-filter me-1"></i>Bộ lọc
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-calendar-day me-2"></i>7 ngày qua</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-calendar-week me-2"></i>30 ngày qua</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-calendar-alt me-2"></i>90 ngày qua</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="text-center p-3 border rounded">
                                        <i class="fas fa-trending-up fa-2x text-success mb-2"></i>
                                        <h5 class="text-success">Tăng trưởng</h5>
                                        <p class="text-muted">Doanh thu tăng 15% so với tháng trước</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center p-3 border rounded">
                                        <i class="fas fa-users fa-2x text-info mb-2"></i>
                                        <h5 class="text-info">Khách hàng mới</h5>
                                        <p class="text-muted">45 bệnh nhân mới trong tháng</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="text-center p-3 border rounded">
                                        <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                        <h5 class="text-warning">Chất lượng</h5>
                                        <p class="text-muted">Đánh giá trung bình 4.8/5 sao</p>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="font-weight-bold mb-3">
                                        <i class="fas fa-clock me-2"></i>Báo cáo gần đây
                                    </h6>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-file-alt me-2 text-primary"></i>
                                                Báo cáo doanh thu tháng 12
                                            </div>
                                            <span class="badge bg-primary rounded-pill">Mới</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-chart-pie me-2 text-success"></i>
                                                Phân tích dịch vụ Q4
                                            </div>
                                            <span class="badge bg-success rounded-pill">Hoàn thành</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-users me-2 text-info"></i>
                                                Thống kê bệnh nhân 2024
                                            </div>
                                            <span class="badge bg-info rounded-pill">Đang xử lý</span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="font-weight-bold mb-3">
                                        <i class="fas fa-calendar-check me-2"></i>Lịch báo cáo
                                    </h6>
                                    <div class="timeline">
                                        <div class="timeline-item">
                                            <div class="timeline-marker bg-primary"></div>
                                            <div class="timeline-content">
                                                <h6 class="timeline-title">Báo cáo tuần</h6>
                                                <p class="timeline-text">Mỗi thứ 2 hàng tuần</p>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-marker bg-success"></div>
                                            <div class="timeline-content">
                                                <h6 class="timeline-title">Báo cáo tháng</h6>
                                                <p class="timeline-text">Ngày 1 hàng tháng</p>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-marker bg-warning"></div>
                                            <div class="timeline-content">
                                                <h6 class="timeline-title">Báo cáo quý</h6>
                                                <p class="timeline-text">Cuối mỗi quý</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
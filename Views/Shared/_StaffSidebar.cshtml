@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
    <div class="position-sticky pt-3">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(currentAction == "Index" && currentController == "Staff" ? "active" : "")" 
                   href="@Url.Action("Index", "Staff")">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentAction == "Patients" && currentController == "Staff" ? "active" : "")" 
                   href="@Url.Action("Patients", "Staff")">
                    <i class="fas fa-user-injured"></i>
                    Quản lý bệnh nhân
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentAction == "Appointments" && currentController == "Staff" ? "active" : "")" 
                   href="@Url.Action("Appointments", "Staff")">
                    <i class="fas fa-calendar-check"></i>
                    Quản lý lịch hẹn
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentAction == "Profile" && currentController == "Staff" ? "active" : "")" 
                   href="@Url.Action("Profile", "Staff")">
                    <i class="fas fa-user"></i>
                    Hồ sơ cá nhân
                </a>
            </li>
        </ul>
    </div>
</nav> 
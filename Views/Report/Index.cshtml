@{
    ViewData["Title"] = "Báo cáo";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <partial name="_AdminSidebar" />

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Báo cáo</h1>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-line"></i>
                                Báo cáo doanh thu
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                Xem thống kê doanh thu theo thời gian
                            </p>
                            <a asp-action="RevenueReport" class="btn btn-primary">
                                <i class="fas fa-chart-bar"></i>
                                Xem báo cáo doanh thu
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-procedures"></i>
                                Báo cáo dịch vụ
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                Xem thống kê các dịch vụ được sử dụng
                            </p>
                            <a asp-action="ServiceReport" class="btn btn-primary">
                                <i class="fas fa-pie-chart"></i>
                                Xem báo cáo dịch vụ
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-users"></i>
                                Báo cáo bệnh nhân
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                Xem thống kê về bệnh nhân và lịch sử khám
                            </p>
                            <a asp-action="PatientReport" class="btn btn-primary">
                                <i class="fas fa-user"></i>
                                Xem báo cáo bệnh nhân
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user-md"></i>
                                Báo cáo nhân viên
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                Xem thống kê hoạt động của nhân viên
                            </p>
                            <a asp-action="StaffReport" class="btn btn-primary">
                                <i class="fas fa-chart-pie"></i>
                                Xem báo cáo nhân viên
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div> 